{
    "name": "Voice-Over Vision",
    "version": "1.0.0",
    "description": "Your vision assistant for YouTube",
    "permissions": ["tabs"],
    "host_permissions": ["https://*.youtube.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    
    "content_scripts": [
        {
            "matches": ["*://www.youtube.com/watch*"],
            "js": [
              "utils.js",
              "adHelpers.js", 
              "controls/index.js",
              "askTheVideo/index.js",
              "audioDescription/progressBar.js",
              "audioDescription/service.js",
              "audioDescription/index.js",
              "contentScript.js"
            ],
            "css": [ 
              "askTheVideo/styles.css",
              "controls/styles.css" 
            ],
            "run_at": "document_idle"
        }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/ask_the_video.mp3",
          "assets/on.mp3",
          "assets/off.mp3"
        ],
        "matches": ["https://*.youtube.com/*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/icon.png",
        "24": "assets/icon.png",
        "32": "assets/icon.png"
      },
      "default_title": "Voice-Over Vision"
    },
    "manifest_version": 3
  }
  